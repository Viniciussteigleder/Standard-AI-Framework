# =============================================================================
# AI Framework - Environment Configuration
# =============================================================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# General
# -----------------------------------------------------------------------------
NODE_ENV=development
APP_NAME=ai-app
LOG_LEVEL=debug

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/ai_framework
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10

# -----------------------------------------------------------------------------
# AI Providers
# -----------------------------------------------------------------------------
AI_DEFAULT_PROVIDER=anthropic
ANTHROPIC_API_KEY=sk-ant-xxx
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022
OPENAI_API_KEY=sk-xxx
OPENAI_MODEL=gpt-4-turbo-preview

# -----------------------------------------------------------------------------
# Vector Database (RAG)
# -----------------------------------------------------------------------------
VECTOR_DB_PROVIDER=pgvector
VECTOR_DB_URL=postgresql://postgres:postgres@localhost:5432/ai_framework

# -----------------------------------------------------------------------------
# Authentication
# -----------------------------------------------------------------------------
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=7d
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-change-this

# -----------------------------------------------------------------------------
# OAuth Providers
# -----------------------------------------------------------------------------
GOOGLE_CLIENT_ID=xxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=xxx
GITHUB_CLIENT_ID=xxx
GITHUB_CLIENT_SECRET=xxx

# -----------------------------------------------------------------------------
# Google Integration
# -----------------------------------------------------------------------------
GOOGLE_SHEETS_ENABLED=false
GOOGLE_DRIVE_ENABLED=false
GOOGLE_SERVICE_ACCOUNT_EMAIL=
GOOGLE_SERVICE_ACCOUNT_PRIVATE_KEY=

# -----------------------------------------------------------------------------
# n8n Integration
# -----------------------------------------------------------------------------
N8N_LOCAL_URL=http://localhost:5678
N8N_LOCAL_API_KEY=

# -----------------------------------------------------------------------------
# AWS
# -----------------------------------------------------------------------------
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=

# -----------------------------------------------------------------------------
# Service URLs
# -----------------------------------------------------------------------------
API_SERVICE_URL=http://localhost:4000
AGENT_SERVICE_URL=http://localhost:4001
WEB_APP_URL=http://localhost:3000

# -----------------------------------------------------------------------------
# Redis
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_ENABLED=true
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_WINDOW_MS=60000

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
FEATURE_RAG_ENABLED=true
FEATURE_A2A_ENABLED=false
FEATURE_MULTI_TENANT=false

# -----------------------------------------------------------------------------
# Docker Compose
# -----------------------------------------------------------------------------
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=ai_framework
N8N_USER=admin
N8N_PASSWORD=admin
TIMEZONE=Europe/Berlin
